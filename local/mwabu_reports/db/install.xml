<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/mwabu_reports/db" VERSION="20140724" COMMENT="XMLDB file for Moodle local/mwabu_reports"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_mwabu_grading_hdg" COMMENT="This table saves information structural configuration in the advance grading report.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="assignmentid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="title" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Unique ID for this  mwabu advance grading subheading."/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_mwabu_grading_shdg" COMMENT="This table saves information structural configuration in the advance grading report.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="assignment" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="headingid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="title" TYPE="text"  NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="criteriaid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Unique ID for this mwabu advance grading subheading."/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_role_prof_matrix" COMMENT="This table saves information relating mwabu job titles (designations) to competencies.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="designation" TYPE="text"  NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="competencyid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
        <KEYS>
          <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Unique ID for this mwabu advance grading subheading."/>
        </KEYS>
      </TABLE>

      <TABLE NAME="local_designation_assign" COMMENT="This table saves information relating mwabu job titles  (designations) to proficiency assignments.">
        <FIELDS>
          <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
          <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
          <FIELD NAME="assignid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
          <FIELD NAME="designation" TYPE="text"  NOTNULL="true" SEQUENCE="false"/>
        </FIELDS>
          <KEYS>
            <KEY NAME="primary" TYPE="primary" FIELDS="id" COMMENT="Unique ID for this mwabu advance grading subheading."/>
          </KEYS>
        </TABLE>





  </TABLES>
  </XMLDB>
